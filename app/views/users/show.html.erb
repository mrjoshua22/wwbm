<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <div>
      <h2><%= @user.name %></h2>
      <%= link_to 'Сменить имя и пароль',
        edit_user_registration_path(@user) if @user == current_user %>
    </div>
    <table class="users-table table">
      <thead>
        <tr>
          <th class="text-center text-white">#</th>
          <th></th>
          <th class="text-center text-white">Дата</th>
          <th class="text-center text-white">Вопрос</th>
          <th class="text-center text-white">Выигрыш</th>
          <th class="text-center text-white">Подсказки</th>
        </tr>
      </thead>

      <%= render partial: 'game', collection: @games %>
    </table>
  </div>
</div>
