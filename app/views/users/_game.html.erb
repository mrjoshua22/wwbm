<tr class="text-center">
  <td class="text-white"><%= game.id %></td>
  <td class="text-white"><%= game_label(game) %></td>
  <td class="text-white"><%= l game.created_at, format: :short %></td>
  <td class="text-white"><%= game.current_level %></td>
  <td class="text-white"><%= number_to_currency game.prize %></td>
  <td class="text-white">
    <%= content_tag :span, '50/50',
      class: "label label-primary #{'game-help-used' if game.fifty_fifty_used?}"
    %>
    <%= content_tag :i, '',
      class: "bi bi-telephone label label-primary #{'game-help-used' if game.friend_call_used?}"
    %>
    <%= content_tag :i, '',
      class: "bi bi-people label label-primary #{'game-help-used' if game.audience_help_used?}"
    %>
  </td>
</tr>
